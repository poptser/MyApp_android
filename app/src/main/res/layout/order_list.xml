<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <TextView
        android:id="@+id/order_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号" />

    <TextView
        android:id="@+id/third_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方单号"
        android:layout_above="@+id/consignee"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/consignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人姓名"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/order_sn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:layout_alignBaseline="@+id/consignee"
        android:layout_alignBottom="@+id/consignee"
        android:layout_toRightOf="@+id/consignee"
        android:layout_toEndOf="@+id/consignee"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广州市"
        android:layout_below="@+id/consignee"
        android:layout_alignLeft="@+id/consignee"
        android:layout_alignStart="@+id/consignee"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/order_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单备注"
        android:layout_below="@+id/address"
        android:layout_alignLeft="@+id/address"
        android:layout_alignStart="@+id/address"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/order_want_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预期送达时间"
        android:layout_below="@+id/order_area"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/order_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配送区域"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/order_remark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/order_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源商家"
        android:layout_alignBaseline="@+id/order_area"
        android:layout_alignBottom="@+id/order_area"
        android:layout_alignRight="@+id/mobile"
        android:layout_alignEnd="@+id/mobile" />

    <Button
        android:id="@+id/handle_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_want_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Button" />


    />
</RelativeLayout>